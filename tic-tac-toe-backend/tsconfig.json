{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["dom", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "rootDir": "./",
      "paths": {
        "src": ["./"],
      },
      "typeRoots": ["./types"]
    },
  }